<div class="mt-3">
  <div class="row justify-content-center">
    <section class="col-lg-5">
        <div class="col-xs-12">
            <h3>Mot de passe oublié</h3>
            <%= form_for :user, url: passwords_path do |form| %>
                <div class="input-group mb-2">
                <%= form.email_field :email, placeholder: "Votre Email" , :class => "form-control"%> 
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Envoyer le lien de rénitialisation</button>
                </div>
            <% end %>
        </div>       
    </section>
  </div>
</div>