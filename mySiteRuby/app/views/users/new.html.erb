<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="mt-3">
  <div class="row justify-content-center">
    <section class="col-lg-5">
      <div class="">
        <div class="col-xs-12">
          <h3>S'inscrire</h3>
          <p class="lead">Inscrivez-vous <span class="text-success">gratuitement</span> dès maintenant</p>
          <%= form_for @user do |form| %>
            <div class="input-group mb-2">
              <%= form.text_field :name, placeholder: "Nom d'utilisateur" , :class => "form-control"%> 
            </div>
            <div class="input-group mb-2">
              <%= form.email_field :email, placeholder: "Email" , :class => "form-control"%> 
            </div>
            <div class="input-group mb-2">
              <%= form.password_field :password, placeholder: "Mot de passe" , :class => "form-control"%> 
            </div>
            <div class="input-group mb-2">
              <%= form.password_field :password_confirmation, placeholder: "Confirmer le mot de passe" , :class => "form-control"%> 
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary">S'inscrire</button>
            </div>
          <% end %>
          <div class="form-group">
            <div class="topCushion">Déjà membre ? <a href="<%= new_session_path %>">Se connecter</a></div>
          </diV>
        </div>
      </div>          
    </section>
  </div>
</div>