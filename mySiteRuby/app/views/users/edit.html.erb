<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="mt-3">
  <div class="row justify-content-center">
    <section class="col-lg-5">
      <div class="col-xs-12">
        <h3>Modifier mon compte</h3>
        <%= form_for @user, url: profil_path do |form| %>

          <% if @user.avatar %>
            <%= image_tag @user.avatar_url %>
          <%end%>

          <div class="input-group mb-2">
            <%= form.file_field :avatar_file, placeholder: "Avatar" , :class => "form-control"%> 
          </div>
          <div class="input-group mb-2">
            <%= form.text_field :name, placeholder: "Nom d'utilisateur" , :class => "form-control"%> 
          </div>
          <div class="input-group mb-2">
            <%= form.email_field :email, placeholder: "Email" , :class => "form-control"%> 
          </div>
          <div class="input-group mb-2">
            <%= form.text_field :firstname, placeholder: "PrÃ©nom" , :class => "form-control"%> 
          </div>
          <div class="input-group mb-2">
            <%= form.text_field :lastname, placeholder: "Nom" , :class => "form-control"%> 
          </div>
          <div class="input-group mb-2">
            <%= form.text_field :motto, placeholder: "Biographie" , :class => "form-control"%> 
          </div>
          <div class="input-group mb-2">
            <%= form.password_field :password, placeholder: "Mot de passe" , :class => "form-control"%> 
          </div>
          <div class="input-group mb-2">
            <%= form.password_field :password_confirmation, placeholder: "Confirmer le mot de passe" , :class => "form-control"%> 
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Modifier mon compte</button>
          </div>
        <% end %>
      </div>        
    </section>
  </div>
</div>
